---
import Head from "@/components/Head.astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"
import { SiteMeta } from "@/configs/consts";

type Props = {
  pageTitle: string;
  pageDesc: string;
};

const { pageTitle, pageDesc } = Astro.props;
---
<!doctype html>
<html lang="en">
	<Head title={`${pageTitle} | ${SiteMeta.siteTitle}`} description={pageDesc}/>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>