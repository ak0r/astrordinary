---
import BaseHead from "@/components/BaseHead.astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"
import { SiteMeta } from "@/configs/consts";

type Props = {
  pageTitle: string;
  pageDesc: string;
};

const { pageTitle, pageDesc } = Astro.props;
---
<!doctype html>
<html lang="en" class="text-base h-full antialiased">
	<BaseHead title={`${pageTitle} | ${SiteMeta.siteTitle}`} description={pageDesc} />
	<body class="bg-neutral-200 text-neutral-800 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-500 ease-in-out">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>